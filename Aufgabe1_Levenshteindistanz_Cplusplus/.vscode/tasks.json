{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "card_restorer.cpp",
                "distance_calculator\\strtool.cpp",
                "distance_calculator\\distcalc.cpp",
                "-o",
                "card_restorer.exe"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file unique",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "card_restorer.cpp",
                "distance_calculator\\strtool.cpp",
                "distance_calculator\\distcalc.cpp",
                "-o",
                "card_restorer.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}